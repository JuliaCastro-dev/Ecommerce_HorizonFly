@model Ecommerce.Models.Hotel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro de Hoteis</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,700;1,100;1,400;1,600&display=swap" rel="stylesheet">

    <link href="~/Content/Cadastros/CadastroHoteis.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")



    @using (Html.BeginForm("CadastroHoteis", "Sistema", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <h1 class="text">HOTEL</h1>
            <div class="bodyInputs">
                @Html.ActionLink("Voltar", "Hoteis", "Sistema", new { htmlAttributes = new { @class = "link" } })

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <span class="comrfimacao"> @ViewBag.sucesso</span>
                <div class="group">
                    @Html.EditorFor(model => model.nome_hotel, new { htmlAttributes = new { @class = "input", @placeholder = "Nome " } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.nome_hotel)</span>
                </div>
                <div class="group">
                    @Html.EditorFor(model => model.endereco_hotel, new { htmlAttributes = new { @class = "input", @placeholder = "Endereço" } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.endereco_hotel)</span>
                </div>

                <div class="group">
                    @Html.EditorFor(model => model.telefone_hotel, new { htmlAttributes = new { @class = "input", @placeholder = "Telefone", @id = "telefone", @name = "telefone" } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.telefone_hotel)</span>
                </div>

                <div class="group">
                    @Html.EditorFor(model => model.diaria_hotel, new { htmlAttributes = new { @class = "input", @placeholder = "R$0,00", @id = "currency" } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.diaria_hotel)</span>
                </div>

                <div class="group">
                    @Html.LabelFor(model => model.descricao_hotel)
                    @Html.TextAreaFor(model => model.descricao_hotel, new { htmlAttributes = new { @class = "input", @placeholder = "Descrição" } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.descricao_hotel)</span>
                </div>
                <div class="group">
                    <div class="dropdown">
                        @Html.DropDownList("cidade", "cidade")
                        <span class="errorMessage"> @Html.ValidationMessageFor(model => model.cd_cidade)</span>

                    </div>

                </div>



                <div class="group">

                    <input class="input" type="file" name="file" id="file" />
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.img_hotel)</span>

                </div>

                <div class="group">

                    <input type="submit" value="Cadastrar" class="button" />

                </div>
            </div>
        </div>
    }


    @Scripts.Render("~/Scripts/Mascaras.js");
    @Scripts.Render("~/Scripts/chosen.jquery.js");
    <script src="~/Scripts/chosen.jquery.js"></script>
</body>
</html>

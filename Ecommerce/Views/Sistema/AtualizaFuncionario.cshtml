@model Ecommerce.Models.Funcionario

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Atualiza Funcionario</title>

    <link href="~/Content/Cadastros/CadastroFuncionario.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,700;1,100;1,400;1,600&display=swap" rel="stylesheet">
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm("AtualizaFuncionario", "Sistema", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <h1 class="text">FUNCIONÁRIO</h1>
            <div class="bodyInputs">
                @Html.ActionLink("Voltar", "Funcionarios", "Sistema", new { htmlAttributes = new { @class = "link" } })



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.rg)
                <span class="comrfimacao"> @ViewBag.sucesso</span>

                <div class="group">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "input", @placeholder = "Nome Completo", @Value = ViewBag.nome } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                   
                </div>


                <div class="group">

                    @Html.EditorFor(model => model.cargo_func, new { htmlAttributes = new { @class = "input", @Value = ViewBag.cargo } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.cargo_func)</span>

                </div>





                <div class="group">

                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "input", @placeholder = "Seu melhor E-mail", @Value = ViewBag.email } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                  

                </div>

                <div class="group">

                    @Html.EditorFor(model => model.telefone, new { htmlAttributes = new { @class = "input", @placeholder = "Telefone Celular", @id = "telefone", @name = "telefone", @Value = ViewBag.tel } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                  


                </div>

                <div class="group">

                    @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "input", @placeholder = "Senha", @type = "password", @Value = ViewBag.senha } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <span class="errorMessage">@Html.ValidationMessageFor(m => m.senha)</span>

                </div>

                <div class="group">

                    <input class="input" type="file" name="file" id="file" />
                    <span class="errorMessage"> @Html.ValidationMessageFor(model => model.img)</span>

                </div>
                @Html.EditorFor(model => model.rg, new { htmlAttributes = new { @class = "input", @Value = ViewBag.rg, @Type = "hidden" } })
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "input", @Value = ViewBag.cpf, @Type = "hidden" } })
                @Html.EditorFor(model => model.tipo, new { htmlAttributes = new { @class = "input", @Value = ViewBag.tipo, @Type = "hidden" } })
                <div class="group">

                    <input type="submit" value="Salvar" class="button" />

                </div>
            </div>
        </div>
    }

    @Scripts.Render("~/Scripts/Mascaras.js");
</body>
</html>

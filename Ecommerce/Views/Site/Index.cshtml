    <div class="search-container">
        <div class="dropdown">
            <button type="button" class="btn-dpw  " data-toggle="dropdown">
                Pacotes
            </button>
            @using (@Html.BeginForm())
            {
                @Html.EditorFor(m => m.Origem, new { htmlAttributes = new { @class = "Input", @placeholder = "Origem" } })

                @Html.EditorFor(m => m.Destino, new { htmlAttributes = new { @class = "Input", @placeholder = "Destino"} })

                <input class="Input" type="submit" value="Buscar" />
            }
        </div>
    </div>
    <div class="base">

    </div>

    <section class="pacotes">
        <h1>Pacotes em OFERTA para as férias em Familía</h1>
        @foreach ( var item in ViewBag.oferta)
            {
                <div class="Card">
                    <img src="@item.img_pacote" alt="Imagem"/>
                    <h2 class="Titulo-pacote">@item.nome_pacote</h2>
                </div>
            }
    </section>


  

}
@Scripts.Render("~/Scripts/Mascaras.js");

